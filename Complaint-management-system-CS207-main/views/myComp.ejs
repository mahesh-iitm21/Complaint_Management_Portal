<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

    <title>My Complaints</title>
    <style>
        .float-end {
            float: left !important;
        }
    </style>
</head>
<%- include('header') %>

    <body>
        <div class="card">
            <div class="card-body mx-4">
                <div class="container">
                    <p style="font-size: 30px; margin-top: 80px; ">My Complaints</p>
                    <%var k=1%>
                        <%for( i of users){%>
                            <%if(i.name==user.name){%>
                                <%for( j of i.complaint){%>
                                    <div>
                                        <div class="row">
                                            <ul class="list-unstyled">
                                                <li class="text-muted mt-1"><span class="text-black">Complaint</span>#
                                                    <%=k%>
                                                        <% k++ %>
                                                </li>
                                                <li class="text-black mt-1">Date: <%=
                                                        j.createdAt.toString().substring(3,15) %> <br> Time: <%=
                                                            j.createdAt.toString().substring(15,21) %>
                                                </li>
                                            </ul>
                                            <hr>
                                            <div class="col-xl-10">
                                                <p>Complaint Category</p>
                                            </div>
                                            <div class="col-xl-2">
                                                <p class="float-end">
                                                    <%= j.category %>
                                                </p>
                                            </div>
                                            <hr>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-10">
                                                <p>Complaint Subject</p>
                                            </div>
                                            <div class="col-xl-2">
                                                <p class="float-end">
                                                    <%= j.subject %>
                                                </p>
                                            </div>
                                            <hr>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-10">
                                                <p>Complaint Description</p>
                                            </div>
                                            <div class="col-xl-2">
                                                <p class="float-end">
                                                    <%= j.desc %>
                                                </p>
                                            </div>
                                            <hr>
                                        </div>
                                        <%if(j.status=="Resolved"){%>
                                            <div class="row">
                                                <div class="col-xl-10">
                                                    <p>Admin Response</p>
                                                </div>
                                                <div class="col-xl-2">
                                                    <p class="float-end">
                                                        <%= j.resp %>
                                                    </p>
                                                </div>
                                                <hr>
                                            </div>
                                            <%} %>

                                                <%if(j.status=="Unresolved"){%>
                                                    <button type="button" class="btn btn-danger">
                                                        <%=j.status%>
                                                    </button>
                                                    <% } else{ %>
                                                        <button type="button" class="btn btn-success">
                                                            <%=j.status%>
                                                        </button>

                                                        <%} %>
                                    </div>
                                    <br>
                                    <br>
                                    <%} %>
                                        <%} %>
                                            <%} %>

                </div>
            </div>
    </body>

</html>